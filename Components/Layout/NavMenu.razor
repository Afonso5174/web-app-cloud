@using Microsoft.AspNetCore.Components.Authorization
@using web_app 
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Gestão Faturas</a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-person-lock" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="faturas">
                        <span class="bi bi-list-check" aria-hidden="true"></span> Faturas
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <button class="nav-link btn btn-link" @onclick="Sair">
                        <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Sair
                    </button>
                </div>
            </Authorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private void Sair()
    {
        var customAuth = (CustomAuthProvider)AuthProvider;
        customAuth.Logout(); // Chama a função que limpa o user
        Nav.NavigateTo("/"); // Volta para o login
    }
}